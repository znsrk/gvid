# ============================================
# Root .env — single source of truth
# Copy this file to .env and fill in your values
# ============================================

# --- Gemini AI ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- Supabase (server-side — service role key) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# --- Supabase (client-side — anon key, exposed to browser) ---
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# --- API URL (frontend → backend) ---
# For local dev:  http://localhost:3001/api
# For production: https://your-cloud-run-service-url.run.app/api
VITE_API_URL=http://localhost:3001/api

# --- Unsplash (optional, for cover images) ---
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# --- Cloud Run (set via gcloud, not in .env) ---
# ALLOWED_ORIGINS=https://your-vercel-domain.vercel.app
# PORT=8080
